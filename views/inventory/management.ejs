<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include("../partials/header") %>

  <main>
    <h1>Inventory Management</h1>

    <% if (messages && messages.length) { %>
      <div class="messages">
        <% messages.forEach(m => { %>
          <p class="<%= m.type %>"><%= m.text %></p>
        <% }) %>
      </div>
    <% } %>

    <section>
      <h2>Add Classification</h2>
      <form action="/inventory/classification/add" method="POST">
        <label for="classification_name">Classification Name</label>
        <input
          type="text"
          id="classification_name"
          name="classification_name"
          value="<%= formData.classification_name || '' %>"
          required
        />
        <button type="submit">Add Classification</button>
      </form>
    </section>

    <section>
      <h2>Existing Classifications</h2>
      <ul>
        <% classifications.forEach(c => { %>
          <li><%= c.classification_name %></li>
        <% }) %>
      </ul>
    </section>

    <section>
      <h2>Add Vehicle</h2>
      <a href="/inventory/vehicle/add" class="btn-primary">Go to Add Vehicle Form</a>
    </section>
  </main>
</body>
</html>
