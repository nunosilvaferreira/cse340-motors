<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Motors</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <header>
        <h1>Motors</h1>
        <p>Your trusted source for vehicles</p>
    </header>

    <nav>
        <%- nav %>
        <ul class="account-nav">
            <% if (typeof accountData !== 'undefined' && accountData) { %>
                <li><a href="/account/"><%= accountData.account_firstname %></a></li>
                <li><a href="/account/logout">Logout</a></li>
            <% } else { %>
                <li><a href="/account/login">Login</a></li>
                <li><a href="/account/register">Register</a></li>
            <% } %>
        </ul>
    </nav>

    <main class="container">
        <h1><%= title %></h1>

        <% if (data && data.length > 0) { %>
            <div class="inventory-grid">
                <% data.forEach(function(item) { %>
                    <div class="vehicle-card">
                        <a href="/inv/detail/<%= item.inv_id %>">
                            <img src="<%= item.inv_image || '/images/vehicle-default.jpg' %>" 
                                 alt="<%= item.inv_make %> <%= item.inv_model %>" 
                                 class="vehicle-thumb">
                        </a>
                        
                        <div class="vehicle-info">
                            <h3>
                                <a href="/inv/detail/<%= item.inv_id %>">
                                    <%= item.inv_make %> <%= item.inv_model %>
                                </a>
                            </h3>
                            
                            <p class="vehicle-year"><strong>Year:</strong> <%= item.inv_year %></p>
                            <p class="vehicle-price"><strong>Price:</strong> $<%= Number(item.inv_price).toLocaleString() %></p>
                            
                            <% if (item.inv_miles) { %>
                                <p class="vehicle-miles"><strong>Mileage:</strong> <%= Number(item.inv_miles).toLocaleString() %> miles</p>
                            <% } %>
                            
                            <% if (item.inv_description) { %>
                                <p class="vehicle-description"><%= item.inv_description.substring(0, 100) %>...</p>
                            <% } %>
                            
                            <a href="/inv/detail/<%= item.inv_id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-vehicles">
                <p>No vehicles found for this classification.</p>
                <a href="/inv/inventory" class="btn btn-primary">View All Vehicles</a>
            </div>
        <% } %>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Motors. All rights reserved.</p>
    </footer>
</body>
</html>