<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include("../partials/header") %>

  <main>
    <h1>Add Vehicle</h1>

    <% if (messages && messages.length) { %>
      <div class="messages">
        <% messages.forEach(m => { %>
          <p class="<%= m.type %>"><%= m.text %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/inventory/vehicle/add" method="POST">
      <label for="classification_id">Classification</label>
      <select id="classification_id" name="classification_id" required>
        <option value="">-- Select --</option>
        <% classifications.forEach(c => { %>
          <option value="<%= c.classification_id %>" <%= formData.classification_id == c.classification_id ? 'selected' : '' %>>
            <%= c.classification_name %>
          </option>
        <% }) %>
      </select>

      <label for="make">Make</label>
      <input type="text" id="make" name="make" value="<%= formData.make || '' %>" required />

      <label for="model">Model</label>
      <input type="text" id="model" name="model" value="<%= formData.model || '' %>" required />

      <label for="year">Year</label>
      <input type="number" id="year" name="year" value="<%= formData.year || '' %>" required />

      <label for="description">Description</label>
      <textarea id="description" name="description" required><%= formData.description || '' %></textarea>

      <label for="price">Price</label>
      <input type="number" id="price" name="price" step="0.01" value="<%= formData.price || '' %>" required />

      <label for="miles">Miles</label>
      <input type="number" id="miles" name="miles" value="<%= formData.miles || '' %>" required />

      <label for="color">Color</label>
      <input type="text" id="color" name="color" value="<%= formData.color || '' %>" required />

      <label for="image">Image Path (optional)</label>
      <input type="text" id="image" name="image" value="<%= formData.image || '' %>" />

      <label for="thumbnail">Thumbnail Path (optional)</label>
      <input type="text" id="thumbnail" name="thumbnail" value="<%= formData.thumbnail || '' %>" />

      <button type="submit">Add Vehicle</button>
    </form>
  </main>
</body>
</html>
