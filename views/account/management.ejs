<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Motors</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <header>
        <h1>Motors</h1>
        <p>Your trusted source for vehicles</p>
    </header>

    <nav>
        <ul>
            <li><a href="/" title="Home page">Home</a></li>
            <li><a href="/inv/classification/1" title="Browse our inventory">Inventory</a></li>
            <% if (typeof accountData !== 'undefined' && accountData) { %>
                <li><a href="/account/"><%= accountData.account_firstname %></a></li>
                <li><a href="/account/logout">Logout</a></li>
            <% } else { %>
                <li><a href="/account/login">Login</a></li>
                <li><a href="/account/register">Register</a></li>
            <% } %>
        </ul>
    </nav>

    <main class="container">
        <h1>Account Management</h1>

        <% if (typeof messages !== 'undefined' && messages.length) { %>
            <div class="messages">
                <% messages.forEach(message => { %>
                    <div class="flash-message <%= message.type %>">
                        <%= message.text %>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <!-- Display greeting based on account type -->
        <%- greeting %>

        <!-- Update Account Link (visible to all logged-in users) -->
        <div class="account-actions">
            <h3>Account Actions</h3>
            <p><a href="/account/update" class="btn btn-primary">Update Account Information</a></p>
        </div>

        <!-- Account Information -->
        <div class="account-info">
            <h3>Your Information</h3>
            <ul>
                <li><strong>First Name:</strong> <%= accountData.account_firstname %></li>
                <li><strong>Last Name:</strong> <%= accountData.account_lastname %></li>
                <li><strong>Email:</strong> <%= accountData.account_email %></li>
                <li><strong>Account Type:</strong> <%= accountData.account_type %></li>
            </ul>
        </div>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Motors. All rights reserved.</p>
    </footer>
</body>
</html>