<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - CSE Motors</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container">
        <h1><%= title %></h1>
        
        <% if (vehicles && vehicles.length > 0) { %>
            <div class="inventory-grid">
                <% vehicles.forEach(function(vehicle) { %>
                    <div class="vehicle-card">
                        <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
                        <p class="vehicle-year">Year: <%= vehicle.inv_year %></p>
                        <p class="vehicle-price">Price: $<%= vehicle.inv_price.toLocaleString() %></p>
                        <% if (vehicle.inv_description) { %>
                            <p class="vehicle-description"><%= vehicle.inv_description %></p>
                        <% } %>
                        <a href="/inv/detail/<%= vehicle.inv_id %>" class="btn btn-primary">View Details</a>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="no-vehicles">No vehicles found in inventory.</p>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>